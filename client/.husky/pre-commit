#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# clientディレクトリに移動
cd "$(dirname -- "$0")/../"

echo "🔍 Checking code style and running tests..."

# ESLintとPrettierを実行
npx lint-staged || {
    echo "❌ Code style check failed. Please fix the errors and try committing again."
    exit 1
}

echo "✅ Code style check passed!" 
